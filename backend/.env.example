# =====================================================
# SERVER CONFIGURATION
# =====================================================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/aegis

# OR MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/aegis?retryWrites=true&w=majority

# =====================================================
# BLOCKCHAIN CONFIGURATION
# =====================================================
# RPC URL for blockchain connection
# For local development (Hardhat)
BLOCKCHAIN_RPC_URL=http://localhost:8545

# For production (Polygon zkEVM Testnet)
# BLOCKCHAIN_RPC_URL=https://rpc.cardona.zkevm-rpc.com

# For production (Polygon zkEVM Mainnet)
# BLOCKCHAIN_RPC_URL=https://zkevm-rpc.com

BLOCKCHAIN_NETWORK=localhost
ENABLE_BLOCKCHAIN=true
ENABLE_WALLET_FUNDING=true

# =====================================================
# WALLET FUNDING CONFIGURATION
# =====================================================
# Private key for funding user wallets
# DEFAULT: Hardhat's first default account (10,000 ETH) - ONLY FOR LOCAL DEVELOPMENT
# WARNING: Change this for production! Never use default keys in production!
FUNDING_WALLET_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Target balance to maintain in user wallets (in ETH)
TARGET_WALLET_BALANCE=1

# Minimum balance before triggering auto-funding (in ETH)
MIN_BALANCE_THRESHOLD=1

# Minimum balance required before anchoring evidence (in ETH)
MIN_BALANCE_FOR_ANCHORING=0.5

# =====================================================
# FILEBASE CONFIGURATION (S3 + IPFS Storage)
# =====================================================
# Get credentials from https://filebase.com/ (5GB free tier)
# 
# Setup Instructions:
# 1. Sign up at https://filebase.com/
# 2. Create a bucket with IPFS storage (recommended name: aegis-evidence)
# 3. Go to Dashboard > Access Keys > Create Access Key
# 4. Add your credentials below
#
# If left empty, system will use mock mode (stores in MongoDB instead)

FILEBASE_ACCESS_KEY=your_filebase_access_key_here
FILEBASE_SECRET_KEY=your_filebase_secret_key_here
FILEBASE_BUCKET=aegis-evidence
FILEBASE_ENDPOINT=https://s3.filebase.com

# =====================================================
# MOCK SERVICES (For Development/Testing)
# =====================================================
# Set to true to enable mock KMS and NGO services
# In production, these should be replaced with real services
MOCK_KMS_ENABLED=true
MOCK_NGO_ENABLED=true
//Dont make these false there is no mechanism of KMS yet in Aegis as of now, Might add in further updates
